{
	"name": "core",
	"description": "Yarn v3 berry based monorepo workspace, configured with eslint,tsconfig etc",
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@commitlint/config-conventional": "^15.0.0",
		"@types/eslint": "^8.2.1",
		"@yarnpkg/sdks": "^2.5.1-rc.6",
		"dprint": "^0.19.2",
		"eslint": "^8.5.0",
		"husky": "^7.0.4",
		"pinst": "^2.1.6",
		"prettier": "^2.5.1",
		"typescript": "^4.5.4"
	},
	"scripts": {
		"athena": "yarn workspace @core/athena",
		"format": "yarn dprint fmt",
		"lint": "yarn workspaces foreach -p --since run lint",
		"logger": "yarn workspace @core/logger",
		"postinstall": "yarn sdks vscode && husky install",
		"postpublish": "pinst --enable",
		"prepublishOnly": "pinst --disable",
		"ui": "yarn workspace @core/ui",
		"gaia:dev": "cargo watch -x run -p gaia -w ./apps/gaia"
	},
	"workspaces": [
		"apps/athena",
		"apps/web",
		"libs/logger",
		"libs/ui"
	],
	"dependenciesMeta": {
		"next@12.0.7": {
			"unplugged": true
		}
	},
	"packageManager": "yarn@3.1.1",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
